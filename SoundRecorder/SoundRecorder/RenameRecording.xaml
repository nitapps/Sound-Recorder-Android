<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoundRecorder.RenameRecording"
             Title="Rename Recording"
             Visual="Material"
             
             BackgroundColor="#357ec7">
    <ContentPage.Content>
        <StackLayout >
            <StackLayout.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Right" Swiped="GoBack"/>
            </StackLayout.GestureRecognizers>
            <Label Text="Enter a New Name"  TextColor="white" FontAttributes="Bold"/>
            <Entry x:Name="NewNameEntry" BackgroundColor="#e3e4fa"  TextColor="Black"/>
            <Button Text="Rename"  BackgroundColor="#e3e4fa" TextColor="Black" Clicked="OnRename"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>